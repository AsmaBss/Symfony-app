
{% extends 'baseAdmin.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    {% block content %}
        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                    <div class="content-header-left col-md-9 col-12 mb-2">
                        <div class="row breadcrumbs-top">

                        </div>
                    </div>

                </div>
                <div class="content-body">
                    <div class="row">

                    </div>
                    <div style="display: inline-block;top: 0px;left: 750px;" class="col-sm-4 col-12">
                        <input class="form-control round" placeholder="Search" type="text" id="searchadv">
                    </div>

                    <button style="top: 5px;left: 750px;" type="submit" id="search" class="btn btn-icon rounded-circle btn-outline-primary mr-1 mb-1"><i class="feather icon-search"></i></button>


                    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

                    <script src="../../../app-assets/js/scripts/ajaxsearch.js"></script>
                    <br>
                    <br>
                    <br>


                    <div class="content-body">
                        <div class="row">
                        </div>
                        <h1>Articles list
                            <a class="btn btn-icon rounded-circle btn-outline-primary mr-1 mb-1" href="{{ path('article_new',{'iduser':app.user.id})  }}"><i class="feather icon-plus"></i></a>

                        </h1>

                        <section id="column-selectors">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">

                                        <div class="card-content">
                                            <div class="card-body card-dashboard">

                                                <div class="table-responsive">
                                                    <table class="table table-striped dataex-html5-selectors">
                                                        <thead>
                                                        <tr>

                                                            <th>Title</th>
                                                            <th>Date</th>

                                                            <th>img</th>
                                                            <th>user address</th>
                                                            <th>user image</th>
                                                            <th>actions</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody id="tb">
                                                        {% for article in articles %}
                                                            <tr>

                                                                <td>{{ article.titre}}</td>
                                                                <td>{{ article.Date ? article.date|date('Y-m-d H:i:s') : '' }}</td>

                                                                <td>   <img src="/uploads/{{article.getImg()}}" style="max-width: 100px"  class="rounded-circle img-border box-shadow-1" alt="Card image"></td>
                                                                <td>{{ article.employer.address }}</td>
                                                                <td>   <img src="/uploads/{{article.employer.getImg()}}" style="max-width: 100px"  class="rounded-circle img-border box-shadow-1" alt="Card image"></td>

                                                                </td>
                                                                <td>
                                                                    <div style="display: inline-block;">
                                                                        <a class="btn btn-outline-primary mr-1 mb-1" href="{{ path('article_edit', {'id': article.id}) }}"> <i class="feather icon-edit"></i></a>
                                                                    </div>
                                                                    <a class="btn btn-outline-primary mr-1 mb-1" href="{{ path('article_show', {'id': article.id}) }}"><i class="feather icon-eye"></i></a>

                                                                    <div style="display: inline-block;">
                                                                        {{ include('article/_delete_form.html.twig') }}
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>

                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </section>


                    </div>
                </div>
            </div>
        </div>

        <!-- Column selectors with Export Options and print table -->



        </div>
        </div>
        </div>
    {% endblock %}
{% endblock %}
