{% extends 'baseFront.html.twig' %}

{% block title %}Stage index{% endblock %}

{% block body %}
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-body">

                <section id="knowledge-base-search">
                    <div class="row">
                        <div class="col-12">
                            <div class="card knowledge-base-bg white">
                                <div class="card-content">
                                    <div class="card-body p-sm-4 p-2">
                                        <h1>Internship Offers</h1>
                                        {{ form_start(form) }}

                                        {{ form_widget(form.category,{'attr':{'class':'form-control'}}) }}
                                        <button class="btn btn-primary mr-1 mb-1">{{ button_label|default('Search') }}</button>

                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="container">
                <section id="card-caps">
                    <div class="row my-3">
                        {% for stage in stages %}
                        <div class="col-xl-6 col-md-6 col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">{{ stage.libelle }}</h4>
                                    <h6 class="card-subtitle text-muted">{{ stage.user.company }}</h6>
                                </div>
                                <div class="card-body text-center">
                                    <div class="card-body">
                                        <p class="card-text">{{ stage.description }}</p>
                                    </div>
                                </div>
                                <div class="card-footer text-muted">
                                    <span class="float-left">
                                        <button id="play" data-content="{{ stage.description }}" class="btn-icon btn btn-primary btn-round">
                                            <i class="feather icon-volume-1"></i>
                                        </button>
                                        <button id="cancel" data-content="{{ stage.description }}" class="btn-icon btn btn-primary btn-round">
                                            <i class="feather icon-x"></i>
                                        </button>
                                    </span>
                                    <span class="float-right">
                                        <a href="{{ path('stage_show', {'id': stage.id}) }}" class="card-link">Read More <i class="fa fa-angle-right"></i></a>
                                    </span>
                                </div>
                            </div>
                        </div>
                        {% else %}
                            <td colspan="8">no records found</td>
                        {% endfor %}
                    </div>
                    <nav aria-label="Page navigation example">
                        <div class="pagination justify-content-center mt-3">
                            {{ knp_pagination_render(stages) }}
                        </div>
                    </nav>
                </section>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

