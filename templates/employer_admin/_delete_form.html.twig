<form method="post" action="{{ path('employer_deleteAdmin', {'id': employer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input  type="hidden" name="_token" value="{{ csrf_token('delete' ~ employer.id) }}">
    <button class="btn btn-outline-danger"><i class="feather icon-trash-2"></i> Delete</button>
</form>
