<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <section class="users-edit">
                <div class="card">
                    <div class="card-header">
                        <h4 class="content-header-title float-left mb-0">Internship Offer</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">
{{ form_start(form) }}



            <!-- Basic Horizontal form layout section start -->
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Date</label>
                                            {{ form_widget(form.Date,{'attr':{'class':'form-control col-md-8'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Address</label>

                                            {{ form_widget(form.adresse,{'attr':{'class':'form-control col-md-8','placeholder':'Adresse'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Title</label>
                                            {{ form_widget(form.titre,{'attr':{'class':'form-control col-md-8','placeholder':'Titre'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Description</label>
                                            {{ form_widget(form.nom,{'attr':{'class':'form-control col-md-8','placeholder':'Nom'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Capacity</label>
                                            {{ form_widget(form.nbrMax,{'attr':{'class':'form-control col-md-8','placeholder':'NB max'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="controls">
                                                <label>Image</label>
                                                {{ form_widget(form.imageFile,{ 'id':'user-img','attr':{'class':'form-control col-md-4','placeholder':'YOUR LOGO *'}}) }}
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-primary glow mb-1 mb-sm-0 mr-0 mr-sm-1">
                                            {{ button_label|default('Save') }}
                                        </button>
                                        <a href="{{ path('evenements_index') }}" class="btn btn-primary mr-1">Back to list</a>
                                    </div>
                                </div>

{{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
