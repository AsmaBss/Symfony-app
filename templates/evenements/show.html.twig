
{% extends 'baseAdmin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>






    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- page users view start -->
                <section class="page-users-view">
                    <div class="row">
                        <!-- account start -->
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title">Account</div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="users-view-image">
                                            <img src="/uploads/{{ evenement.getImg() }}" style="max-height: 500px; max-width: 200px;" class="users-avatar-shadow w-100 rounded mb-2 pr-2 ml-1" alt="avatar">
                                        </div>
                                        <div class="col-12 col-sm-9 col-md-6 col-lg-5">

                                            <div class="btn-toolbar" role="toolbar" aria-label="Programmatic control">
                                                <div class="btn-group btn-group-sm" aria-label="Set Select2 option">

                                                    <table class="table">
                                                        <tbody>
                                                        <tr>
                                                            <td class="font-weight-bold">Title</td>
                                                            <td>{{ evenement.titre }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="font-weight-bold">Description</td>
                                                            <td>{{ evenement.nom }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="font-weight-bold">Date</td>
                                                            <td>{{ evenement.Date ? evenement.Date|date('Y-m-d') : '' }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="font-weight-bold">Address</td>
                                                            <td>{{ evenement.adresse }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="font-weight-bold">Participants number</td>
                                                            <td>{{ evenement.nbrParticipants }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="font-weight-bold">Capacity</td>
                                                            <td>{{ evenement.nbrMax }}</td>
                                                        </tr>


                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="col-12">
                                                    <a href="{{ path('evenements_edit', {'id': evenement.id}) }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit</a>
                                                    <a href="{{ path('evenements_index') }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> afficher</a>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- account end -->
                                <!-- information start -->

                                <!-- information start -->
                                <!-- social links end -->

                                <!-- social links end -->
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <!-- permissions end -->
    </div>
    </section>
    <!-- page users view end -->

    </div>
    </div>
    </div>







{% endblock %}
