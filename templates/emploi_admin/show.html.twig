{% extends 'base_admin.html.twig' %}

{% block title %}Emploi{% endblock %}

{% block body %}
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-body">
                <section class="page-users-view">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title">Job</div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                                            <table>
                                                <tr>
                                                    <td class="font-weight-bold">ID</td>
                                                    <td>{{ emploi.id }}</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Title</td>
                                                    <td>{{ emploi.libelle }}</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Post</td>
                                                    <td>{{ emploi.poste }}</td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-12 col-md-12 col-lg-5">
                                            <table class="ml-0 ml-sm-0 ml-lg-0">
                                                <tr>
                                                    <td class="font-weight-bold">Expiration Date</td>
                                                    <td>{{ emploi.dateExpiration ? emploi.dateExpiration|date('Y-m-d') : '' }}</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Contract Type</td>
                                                    <td>{{ emploi.typeContrat }}</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Salary</td>
                                                    <td>{{ emploi.salaire }} DT</td>
                                                </tr>
                                                <tr>
                                                    <td class="font-weight-bold">Category</td>
                                                    <td>{{ emploi.category.libelle }}</td>
                                                </tr>

                                            </table>
                                        </div>

                                        <div class="col-12 col-md-12">
                                            <a href="{{ path('emploi_admin_index') }}" class="btn btn-primary mr-1">Back to list</a>
                                            <a href="{{ path('emploi_admin_edit', {'id': emploi.id}) }}" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i>Edit</a>

                                            {{ include('emploi_admin/_delete_form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
