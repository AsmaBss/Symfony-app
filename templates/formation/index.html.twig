{% block body %}
 <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
 <div class="row" id="basic-table">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                       <button type="button" class="btn btn-dark mr-1 mb-1 waves-effect waves-light" > <a align="center" href="{{ path('formation_new') }}">Create new formation</a></button>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                  
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                      <th>ID</th>
                                                    <th>nom formation</th>
                                                    <th>nomdeformateur</th>
                                                    <th>sujetdeformation</th>
                                                
                                                  </tr>
                                            </thead>
                                            <tbody>

                                           {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.nomformation }}</td>
                <td>{{ formation.nomdeformateur }}</td>
                <td>{{ formation.sujetdeformation }}</td>
                <td>
                    <button type="button" class="btn btn-warning mr-1 mb-1 waves-effect waves-light" ><a href="{{ path('formation_show', {'id': formation.id}) }}">show</button>
                    <button type="button" class="btn btn-success mr-1 mb-1 waves-effect waves-light"><a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a></button>
                   <button type="button" class="btn btn-danger mr-1 mb-1 waves-effect waves-light"> <a href="{{ path('formation_delete', {'id': formation.id}) }}">delete</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                              

                               
                            </div>
                        </div>
                    </div>
                </div>
