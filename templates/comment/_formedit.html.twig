
<div class="card-content">
    <div class="card-body">

        <div class="form-body">
            <div class="row justify-content-center">

                {{ form_start(form) }}

                <div class="col-xl-12">
                    <div class="form-group row">




                                <!-- {{ form_widget(form.content, {'attr': {'class': 'form-control char-textarea'}}) }} -->
                                <textarea type="text" class="form-control" id="{{ form.content.vars.id }}"
                                       name="{{ form.content.vars.full_name }}" style="width: 500px;">
                                    {{ form.content.vars.value  }}
                                </textarea>
                                {{ form_errors(form.content) }}



                    </div>
                </div>

                <br>






                <br>


                <div class="col-12">
                    <div class="form-group row">

                        <div class="col-md-8">
                            <fieldset class="form-group">
                                <div class="btn-group dropdown mr-1 mb-1">
                                    <!-- {{ form_widget(form.post, {'attr': {'class': 'form-control char-textarea'}}) }} -->
                                    <input type="hidden" class="form-control" id="{{ form.post.vars.id }}"
                                           name="{{ form.post.vars.full_name }}" value="{{ form.post.vars.value  }}">

                                </div>


                            </fieldset>
                        </div>
                    </div>
                </div>






                <button id="submitbtn" class="btn btn-outline-success mr-1 mb-1">Update</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>


<script>
    function editReview()
    {
        const textarea = document.getElementById('comment1_content');
        let badwords = /bashful|dopey|grumpy|happy|sleepy|doc/gi;
        let userreview1 = textarea.value;
        let userreview2 = userreview1.replace(badwords,'****');
        document.getElementById('comment1_content').value = userreview2;

    }

    document.getElementById('submitbtn').addEventListener('click',editReview)
</script>

