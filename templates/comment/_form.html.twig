
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- users edit start -->
            <section class="users-edit">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">

                            <div class="tab-content">
                                <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">
                                    <!-- users edit media object start -->

                {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

                                    <div class="col-12">
                                        <div class="form-group row">
                                            <label>Comment</label>

                                            <div class="col-md-8">

                                                <fieldset class="form-group">

                                                    {{ form_widget(form.content,{'attr':{'class':'form-control col-12 col-sm-7 ','placeholder':'YOUR COMMENT *'}}) }}
                                                </fieldset>


                        </div>
                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <label>Post</label>
                                                    <div class="col-md-8">
                                                        <fieldset class="form-group">

                                                            {{ form_widget(form.post,{ 'label':'','id' : 'user-company','attr':{'class':'form-control col-12 col-sm-7 ','placeholder':'YOUR COMMENT *'}}) }}
                                                        </fieldset>


                                                    </div>


                        </div>
                    </div>
                </div>









                <button id="submitbtn" class="btn btn-outline-success mr-1 mb-1">{{ button_label|default('Save') }}</button>



                                        {{ form_end(form) }}


                                </div>
                            </div>

                        </div>

                    </div>
                </div>
        </div>



    </div>
</div>
</div>
</div>
</div>
</section>
<!-- users edit ends -->

</div>
</div>
</div>
<script>
    function editReview()
    {

        const textarea = document.getElementById('comment1_content');
        let badwords = /bashful|dopey|grumpy|happy|sleepy|doc/gi;
        let userreview1 = textarea.value;
        let userreview2 = userreview1.replace(badwords,'****');
        document.getElementById('comment1_content').value = userreview2;

    }

    document.getElementById('submitbtn').addEventListener('click',editReview)
</script>






