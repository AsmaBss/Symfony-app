
<div class="card-content">
    <div class="card-body">

        <div class="form-body">
            <div class="row">

                {{ form_start(form) }}

                <div class="col-12">
                    <div class="form-group row">

                        <div class="col-md-4">
                            <fieldset class="form-group">

                                <!-- {{ form_widget(form.content, {'attr': {'class': 'form-control char-textarea'}}) }} -->
                                <textarea type="text" class="form-control" id="{{ form.content.vars.id }}"
                                       name="{{ form.content.vars.full_name }}" style="width: 500px;" >{{ form.content.vars.value  }}
                                </textarea>
                                {{ form_errors(form.content) }}
                            </fieldset>

                        </div>
                    </div>
                </div>

                <br>


                <button id="submitbtn" class="btn btn-outline-success mr-1 mb-1">{{ button_label|default('Save') }}</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>


<script>
    function editReview()
    {
        const textarea = document.getElementById('comment1_content');
        let badwords = /bashful|dopey|grumpy|happy|sleepy|doc/gi;
        let userreview1 = textarea.value;
        let userreview2 = userreview1.replace(badwords,'****');
        document.getElementById('comment1_content').value = userreview2;

    }

    document.getElementById('submitbtn').addEventListener('click',editReview)
</script>

