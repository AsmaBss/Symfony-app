




    {% extends 'baseAdmin.html.twig' %}

    {% block title %}Candidat{% endblock %}

    {% block body %}
        <h1>Candidat</h1>






        <div class="app-content content">
            <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
            <div class="content-wrapper">
                <div class="content-header row">
                </div>
                <div class="content-body">
                    <!-- page users view start -->
                    <section class="page-users-view">
                        <div class="row">
                            <!-- account start -->
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title">Account</div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="users-view-image">
                                                <img src="/uploads/{{ candidat.getImg() }}" style="max-height: 500px; max-width: 200px;" class="users-avatar-shadow w-100 rounded mb-2 pr-2 ml-1" alt="avatar">
                                            </div>
                                            <div class="col-12 col-sm-9 col-md-6 col-lg-5">
                                                <script type="text/javascript">
                                                    function imprimer_page(){
                                                        window.print();
                                                    }
                                                </script>
                                                <div class="btn-toolbar" role="toolbar" aria-label="Programmatic control">
                                                    <div class="btn-group btn-group-sm" aria-label="Set Select2 option">
                                                        <form>
                                                            <input id="impression" class="js-programmatic-set-val btn btn-outline-primary mr-1 mb-1s" name="impression" type="button" onclick="imprimer_page()" value="Print" />
                                                            <br>
                                                            <br>
                                                            <div class="col-12">
                                                                <a href="{{ path('candidat_edit', {'id': candidat.id}) }}"><i class="feather icon-edit-1"></i>  Edit</a>
                                                                <br>
                                                                <br>
                                                                <a href="{{ path('candidat_index') }}" ><i class="fa fa-chevron-left"></i> Back </a>


                                                            </div>
                                                        </form>
                                                <table class="table">
                                                    <tbody>

                                                    <tr>
                                                        <td class="font-weight-bold">name</td>
                                                        <td>{{ candidat.nom }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">First Name</td>
                                                        <td>{{ candidat.prenom }}</td>
                                                    </tr>

                                                    <tr>
                                                        <td class="font-weight-bold">Phone</td>
                                                        <td>{{ candidat.phone }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Address</td>
                                                        <td>{{ candidat.address }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Town</td>
                                                        <td>{{ candidat.town }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Facebook</td>
                                                        <td>{{ candidat.fb }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Linkdin</td>
                                                        <td>{{ candidat.linkdin }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Description</td>
                                                        <td>{{ candidat.description }}</td>
                                                    </tr>

                                                    <tr>
                                                        <td class="font-weight-bold">Birthday</td>
                                                        <td>{{ candidat.dateNaissance ? candidat.dateNaissance|date('Y-m-d') : '' }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Degree</td>
                                                        <td>{{ candidat.nivEtude }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="font-weight-bold">Type </td>
                                                        <td>{{ candidat.typeCandidat }}</td>
                                                    </tr>


                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- account end -->
                            <!-- information start -->
                            <div class="col-md-6 col-12 ">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title mb-2">Skills</div>
                                    </div>
                                    <div class="card-body">
                                        <table>
                                            {% for skills in candidat.skills %}
                                            <tr>




                                                <td class="font-weight-bold">{{ skills.libelle }} </td>


                                            </tr>
                                                <tr>




                                                    <td class="font-weight-bold">        <img src="/uploads/{{ skills.getImg() }}" style="max-height: 100px; max-width: 100px;" class="users-avatar-shadow w-100 rounded mb-2 pr-2 ml-1" alt="avatar">
                                                    </td>


                                                </tr>
                                            {% endfor %}

                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- information start -->
                            <!-- social links end -->

                            <!-- social links end -->
                        </div>
            </div>
        </div>
        </div>
        </div>
        </div>
        <!-- permissions end -->
        </div>
        </section>
        <!-- page users view end -->

        </div>
        </div>
        </div>




        {{ include('candidat/_delete_form.html.twig') }}


{% endblock %}
