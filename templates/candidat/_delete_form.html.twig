<form method="post" action="{{ path('candidat_delete', {'id': candidat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidat.id) }}">
    <button  id="confirm-color"  class="btn btn-outline-danger mr-1 mb-1"><i class="feather icon-trash-2"></i></button>
</form>
