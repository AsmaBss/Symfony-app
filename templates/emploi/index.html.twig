{% extends 'base.html.twig' %}

{% block title %}Emploi index{% endblock %}

{% block body %}
    <h1>Emploi index</h1>

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-body">
                <section id="knowledge-base-search">
                    <div class="row">
                        <div class="col-12">
                            <div class="card knowledge-base-bg white">
                                <div class="card-content">
                                    <div class="card-body p-sm-4 p-2">
                                        <h1>Job Offers</h1>
                                        {{ form_start(form) }}

                                        {{ form_widget(form.category,{'attr':{'class':'form-control'}}) }}
                                        <button class="btn btn-primary mr-1 mb-1">{{ button_label|default('Search') }}</button>

                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section id="card-caps">
                    <div class="row my-3">
                        {% for emploi in emplois %}
                            <div class="col-xl-6 col-md-6 col-sm-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ emploi.libelle }}</h4>
                                        <h6 class="card-subtitle text-muted">Employment Name</h6>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="card-body">
                                            <p class="card-text">{{ emploi.description }}</p>
                                        </div>
                                    </div>
                                    <div class="card-footer text-muted">
                                        <span class="float-left"></span>
                                        <span class="float-right">
                                        <a href="{{ path('emploi_show', {'id': emploi.id}) }}" class="card-link">Read More <i class="fa fa-angle-right"></i></a>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <td colspan="8">no records found</td>
                        {% endfor %}
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
